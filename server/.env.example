# =============================================================================
# INFIVERSE - AI WORKFLOW MANAGEMENT SYSTEM
# Environment Configuration Template
#
# Instructions:
# 1. Copy this file to a new file named .env in the same directory.
# 2. Fill in the placeholder values with your actual credentials and settings.
# 3. Do NOT commit the .env file to version control.
# =============================================================================

# --------------------------------------
# Core Application Settings
# --------------------------------------
NODE_ENV=production
PORT=5000
# The frontend URL is used for CORS and in email links.
# Use http://localhost:5173 for local development.
FRONTEND_URL=https://infiverse-bhl.vercel.app

# --------------------------------------
# Database & JWT
# --------------------------------------
# Your MongoDB connection string.
MONGODB_URI=mongodb+srv://<user>:<password>@cluster.mongodb.net/your-db-name

# A long, random, and secret string for signing JSON Web Tokens.
JWT_SECRET=your-super-secret-jwt-key

# --------------------------------------
# Security & CORS
# --------------------------------------
# Set this to your frontend's domain in production.
# Use http://localhost:5173 for local development.
CORS_ORIGIN=https://main-workflow.vercel.app

RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# --------------------------------------
# Email Service (Nodemailer)
# --------------------------------------
EMAIL_USER=your-email@example.com
EMAIL_PASSWORD=your-email-app-password

# --------------------------------------
# Cloudinary (for Screen Capture Storage)
# --------------------------------------
CLOUDINARY_STORAGE_ENABLED=true
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# --------------------------------------
# Web Push Notifications (VAPID Keys)
# --------------------------------------
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key

# --------------------------------------
# AI Services
# --------------------------------------
AI_ANALYSIS_ENABLED=true
MAX_AI_RETRIES=3

# Google Gemini API Key
GEMINI_API_KEY=your-gemini-api-key

# Groq AI Service (Optional)
GROQ_API_KEY=your-groq-api-key
GROQ_MODEL=llama3-8b-8192

# --------------------------------------
# Employee Monitoring & Attendance
# --------------------------------------
# General Monitoring
BROWSER_MONITORING_ENABLED=true
ACTIVITY_TRACKING_INTERVAL=60000
ACTIVITY_FLUSH_INTERVAL=30000
IDLE_THRESHOLD=900000

# Browser & Website Monitoring
BROWSER_CHECK_INTERVAL=5000
WEBSITE_MONITORING_INTERVAL=8000
BROWSER_CACHE_TIMEOUT=2000
BROWSER_RATE_LIMIT=1000

# Screen Capture Settings
SCREEN_CAPTURE_INTERVAL=300000
COMPRESSION_QUALITY=80
SCREENSHOT_QUALITY=80
MAX_SCREENSHOT_SIZE=5242880
SCREENSHOT_MAX_SIZE=1920x1080
SCREENSHOT_STORAGE_PATH=./uploads/employee_data
ENABLE_LOCAL_BACKUP=false

# Attendance & Geolocation
AUTO_END_DAY_ENABLED=true
MAX_WORKING_HOURS=8
OFFICE_LAT=19.160122
OFFICE_LNG=72.839720
OFFICE_RADIUS=500
OFFICE_ADDRESS="Blackhole Infiverse, Kali Gali, 176/1410, Rd Number 3, near Hathi Circle, above Bright Connection, Motilal Nagar II, Goregaon West, Mumbai, Maharashtra 400104"

# --------------------------------------
# Logging
# --------------------------------------
LOG_LEVEL=info
ENABLE_PERFORMANCE_LOGS=false
